<div class="container">

  <div class="row">

    <% @products.each do |product| %>

    <div class="col-xs-12 col-md-6 col-lg-6">
      <div class="jumbotron">
        <div class="center_everything">
          <h2><%= product.product_name %></h2>
          <p><%= product.description %></p>
          <img src= <%= product.image %>>
          <p><a class="btn btn-primary btn-md" href="/products/<%= product.id %>" role="button"><%= number_to_currency(product.price) %></a></p>
        </div>
      </div> <!-- jtron -->
    </div> <!-- col -->

  <% end %>

  </div> <!-- row -->

# </div> <!-- container -->